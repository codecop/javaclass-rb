# See:: http://ph7spot.com/musings/getting-started-with-autotest

# ignore other content
Autotest.add_hook :initialize do |autotest|
  [/(?:\.hg|hosting)[\/\\].*$/, /\.(?:pdf|txt|bat|java)$/i ].each do |exception|
    autotest.add_exception(exception)
  end
end
